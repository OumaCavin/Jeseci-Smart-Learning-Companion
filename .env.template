# Environment Configuration for Jeseci Smart Learning Companion
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (auto-detected based on ENVIRONMENT)
# For development (SQLite): Leave empty, will use ./jeseci_dev.db
# For production (PostgreSQL): Set to your PostgreSQL connection string
# DATABASE_URL=postgresql://username:password@localhost:5432/jeseci_learning_companion

# Database Type Selection
ENVIRONMENT=development  # development (SQLite) or production (PostgreSQL)

# SQLite Configuration (for development)
SQLITE_DB_PATH=./jeseci_dev.db

# PostgreSQL Configuration (for production)
POSTGRES_SERVER=localhost
POSTGRES_USER=jeseci_user
POSTGRES_PASSWORD=jeseci_secure_password_2024
POSTGRES_DB=jeseci_learning_companion
POSTGRES_PORT=5432

# =============================================================================
# AI CONTENT GENERATION (NEW!)
# =============================================================================

# OpenAI API Key - Required for AI-generated lessons
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Configuration
AI_MODEL=gpt-4o-mini  # Cost-effective model for content generation
AI_MAX_TOKENS=1500    # Maximum tokens for generated content
AI_TEMPERATURE=0.7    # Creativity level for content generation

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Admin User (created automatically)
ADMIN_USERNAME=cavin_admin
ADMIN_EMAIL=cavin@jeseci.com
ADMIN_PASSWORD=secure_password_123

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# API Configuration
API_V1_STR=/api/v1
DEBUG=true  # Set to false in production
LOG_LEVEL=info  # debug, info, warning, error

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Neo4j Configuration (for knowledge graph)
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password
NEO4J_DATABASE=neo4j

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# Email settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@jeseci.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_NOTIFICATIONS=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1  # Set to number of CPU cores in production

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/certificate.pem
SSL_KEY_PATH=/path/to/private_key.pem

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Application Monitoring
SENTRY_DSN=your_sentry_dsn_here
ENABLE_METRICS=true

# Log Configuration
LOG_FILE=./logs/jeseci.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Hot reload for development
AUTO_RELOAD=true

# Database migrations
AUTO_MIGRATE=true

# Seed data on startup
AUTO_SEED_DATA=false